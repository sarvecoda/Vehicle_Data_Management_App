<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/liveVehicleMain"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.2"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/liveSlNoLookLike"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/liveNameLookLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Sarvesh"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/liceVehNoLookLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="RJ 13 SB 4733"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_weight="1"
        />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/liveMobileNoLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="8553469810"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/liveModelNameLookLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lamborghini Veneno"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.2"
        >

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_delete"
            android:scaleType="center"
            />

    </LinearLayout>



</LinearLayout>